<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="OtusMongo" transaction-type="JTA">
		<provider>org.hibernate.ogm.jpa.HibernateOgmPersistence</provider>
		<class>br.org.otus.system.SystemConfig</class>
		<class>br.org.otus.user.User</class>
		<class>br.org.otus.auditor.Auditor</class>
		<class>br.org.otus.auditor.LogEntry</class>
		<properties>
			<property name="hibernate.transaction.jta.platform" value="org.hibernate.service.jta.platform.internal.JBossAppServerJtaPlatform"/>
			<property name="hibernate.ogm.datastore.database" value="otus"/>
			<property name="hibernate.ogm.datastore.host" value="${database.host}"/>
			<property name="hibernate.ogm.datastore.provider" value="mongodb"/>
			<property name="hibernate.ogm.datastore.port" value="${database.port}"/>
			<property name="hibernate.ogm.datastore.create_database" value="false" />
			<property name="hibernate.ogm.datastore.username" value="${database.username}" />
			<property name="hibernate.ogm.datastore.password" value="${database.password}" />
		</properties>
	</persistence-unit>
</persistence>
